{
	"name": "@faustbrian/foreman",
	"version": "0.1.0",
	"description": "Programmatic use of pm2 without callback hell.",
	"homepage": "https://github.com/faustbrian/foreman",
	"bugs": {
		"url": "https://github.com/faustbrian/foreman/issues"
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:faustbrian/foreman.git"
	},
	"license": "MIT",
	"author": "Brian Faust <hello@basecode.sh>",
	"files": [
		"dist"
	],
	"main": "dist/index",
	"types": "dist/index",
	"scripts": {
		"build": "yarn clean && tsc",
		"build:watch": "yarn build -w",
		"clean": "rimraf .coverage dist tmp",
		"format": "yarn lint && yarn prettier",
		"lint": "tslint -c tslint.json 'src/**/*.ts' --fix",
		"prepublishOnly": "yarn format && yarn test && yarn build",
		"prettier": "prettier --write \"./*.{ts,js,json,md}\" \"./**/*.{ts,js,json,md}\"",
		"test": "jest",
		"test:watch": "jest --watchAll"
	},
	"jest": {
		"bail": true,
		"collectCoverage": true,
		"collectCoverageFrom": [
			"src/**/*.ts",
			"!**/node_modules/**"
		],
		"coverageDirectory": "<rootDir>/.coverage",
		"coverageReporters": [
			"json",
			"lcov",
			"text",
			"clover",
			"html"
		],
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js",
			"jsx",
			"json",
			"node"
		],
		"setupFilesAfterEnv": [
			"jest-extended"
		],
		"testEnvironment": "node",
		"testMatch": [
			"**/*.test.ts"
		],
		"transform": {
			"^.+\\.tsx?$": "ts-jest"
		},
		"verbose": true
	},
	"dependencies": {
		"execa": "^1.0.0"
	},
	"devDependencies": {
		"@hapi/hapi": "^18.3.1",
		"@sindresorhus/tsconfig": "^0.3.0",
		"@types/execa": "^0.9.0",
		"@types/jest": "^24.0.12",
		"@types/node": "^11.13.8",
		"@types/prettier": "^1.16.3",
		"@types/rimraf": "^2.0.2",
		"codecov": "^3.3.0",
		"jest": "^24.7.1",
		"jest-extended": "^0.11.1",
		"prettier": "^1.17.0",
		"rimraf": "^2.6.3",
		"ts-jest": "^24.0.2",
		"tslint": "^5.16.0",
		"tslint-config-prettier": "^1.18.0",
		"typescript": "^3.4.5"
	},
	"engines": {
		"node": ">=10.4"
	}
}
